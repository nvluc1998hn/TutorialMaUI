<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutorialMaUI.Pages.FlexLayOutDemo"
             Title="Flex LayOut Demo">
    <ScrollView Orientation="Horizontal">
        <FlexLayout Direction="Row">
            <BoxView HeightRequest="150" WidthRequest="100" Color="#3498DB"></BoxView>
            <BoxView HeightRequest="150" WidthRequest="150" Color="#1ABC9C"></BoxView>
            <BoxView HeightRequest="150" WidthRequest="150" Color="#9B59B6"></BoxView>
            <BoxView HeightRequest="150" WidthRequest="100" Color="#F1C40F"></BoxView>
        </FlexLayout>
    </ScrollView>

</ContentPage>